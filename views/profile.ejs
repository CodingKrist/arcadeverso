<%- include('partials/header') -%>

<main>
  <div class="profile-container">
    <!-- Perfil del usuario -->
    <div class="upper-container">
      <div class="profile-box">
        <div class="profile-header">
          <div class="profile-avatar">
            <img src="ruta/a/la/foto-de-perfil.jpg" alt="Foto de perfil">
          </div>
          <div class="profile-name">
            Nombre de Usuario
          </div>
        </div>
        <div class="profile-details">
          <div class="profile-info">
            <h2>Perfil</h2>
            <div class="profile-description">
              Descripción del perfil...
            </div>
            <div class="profile-games">
              <h3>Juegos Favoritos</h3>
              <ul>
                <li>Juego 1</li>
                <li>Juego 2</li>
                <li>Juego 3</li>
                <!-- Agrega más juegos según sea necesario -->
              </ul>
            </div>
          </div>
          <div class="profile-quotes">
            <h2>Citas Favoritas</h2>
            <ul>
              <li>Esta es la primera cita.</li>
              <li>Esta es la segunda cita.</li>
              <li>Esta es la tercera cita.</li>
              <!-- Agrega más citas según sea necesario -->
            </ul>
          </div>
        </div>
      </div>

      <!-- Formulario para añadir un post -->
      <div class="add-post-form-container">
        <div class="add-post-form">
          <h2>Añadir Publicación</h2>
          <form action="/profile/add-post" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="title">Título</label>
              <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
              <label for="description">Descripción</label>
              <textarea id="description" name="description" rows="4" required></textarea>
            </div>
            <div class="form-group">
              <label for="image">Imagen</label>
              <input type="file" id="image" name="image" accept="image/*" required>
            </div>
            <button type="submit" class="btn">Publicar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="bottom-container">
      <!-- Espacio para mostrar las publicaciones del usuario -->
      <div class="user-posts">
        <h2>Mis Publicaciones</h2>
        <div class="post-grid">
          <!-- Aquí se muestran las publicaciones del usuario -->
          <div class="post">
            <img src="ruta/a/la/imagen-pequena.jpg" alt="Imagen de la publicación">
            <h3>Título de la publicación</h3>
          </div>
          <!-- Repite este bloque para cada publicación del usuario -->
        </div>
      </div>
    </div>  
  </div> <!-- Cierre de la etiqueta profile-container -->
</main>

<%- include('partials/footer') -%>
